<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag10"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/rafiki3"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rafik" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/edittexte_rudus"
        android:ems="10"
        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:focusable="false"
        android:textColor="#024472"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="108dp"
        android:layout_height="116dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/male"
        android:onClick="modifImg"
        app:civ_border_color="#3a83b7"
        app:civ_border_width="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="90dp"
        android:background="@android:color/transparent"
        android:shrinkColumns="1"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom">

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp"
                app:srcCompat="@drawable/acueil" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/raleway_regular"
                android:onClick="E8"
                android:padding="10dp"
                android:text="@string/accueil"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#80868585" />

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp"
                app:srcCompat="@drawable/fich_med" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/raleway_regular"
                android:onClick="donnees_pers"
                android:padding="10dp"
                android:text="@string/donn_es_personnelles"
                android:textSize="18sp" />

        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#80868585" />

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp"
                app:srcCompat="@drawable/ficher" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/raleway_regular"
                android:onClick="fiche"
                android:padding="10dp"
                android:text="@string/fiche_m_dicale"
                android:textSize="18sp" />

        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#80868585" />

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp"
                app:srcCompat="@drawable/addper" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/raleway_regular"
                android:onClick="contacts"
                android:padding="10dp"
                android:text="@string/mes_contacts"
                android:textSize="18sp" />

        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#80868585" />

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp"
                app:srcCompat="@drawable/son" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/raleway_regular"
                android:onClick="alertes"
                android:padding="10dp"
                android:text="@string/alertes"
                android:textSize="18sp" />

        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#80868585" />

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="18sp"
                app:srcCompat="@drawable/deconnexion" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/raleway_regular"
                android:onClick="deconnecter"
                android:padding="10dp"
                android:text="@string/d_connecter"
                android:textSize="18sp" />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>